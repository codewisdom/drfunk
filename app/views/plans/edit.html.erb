<a href="#" id="edit_plan_name">Edit</a>
<script type="text/javascript">
//<![CDATA[
new Ajax.InPlaceEditor('plan_name','<%= plan_path(@plan)%>',
                        {
                          ajaxOptions: { method: 'put' }, 
                          paramName: 'plan[name]', 
                          externalControl: 'edit_plan_name',
                          externalControlOnly: true,
                          onComplete: null,
                          callback:function(form){
                            return Form.serialize(form) 
                              + '&authenticity_token=' 
                              + encodeURIComponent('<%=form_authenticity_token%>');
                          }
                        })
//]]>
</script>
