<% remote_form_for(Scenario.new,
     :url => copy_scenario_setup_path(@scenario),
     :html => {:id => "copy_setup"}) do |f| %>
<select name="other_scenario_id">
<%= options_from_collection_for_select(@scenario.plan.scenarios.other_scenarios(@scenario).with_setup.updated_first, "id", "name")%>
</select>
<%= submit_tag 'Copy setup from this scenario' %> or 
<%= link_to_remote('Cancel',
      :url => scenario_setup_path(@scenario),
      :method => :get) %>
<% end %>
