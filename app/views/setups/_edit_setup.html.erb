<% remote_form_for(@scenario, 
     :url => scenario_setup_path(@scenario)) do |f| %>
    <%= f.text_area :setup, {:rows => 10, :value => @scenario.setup}%><br/>
    <%= submit_tag 'Save this setup' %> or 
<%= link_to_remote('Cancel',
                   :url => scenario_setup_path(@scenario),
                   :html => {:class => "small-text"},
                   :method => :get) %>
<% end %>
