<% remote_form_for(Scenario.new, 
     :url => scenario_setup_path(@scenario), 
     :html => {:id => "new_setup"}) do |f| %>
    <%= f.text_area :setup, {:rows => 10} %><br/>
    <%= submit_tag 'Add this setup' %> or 
    <%= link_to_remote('Cancel',
          :url => scenario_setup_path(@scenario),
          :method => :get) %>
<% end %>
