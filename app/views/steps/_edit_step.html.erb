<% remote_form_for(@step) do |f| %>
      <span class="step-number">
          <%= @step.position%>.
      </span>
      <% @step_height = step_height(@step) %>
      <%= f.text_area :description, 
          {:value => @step.description, 
           :class => "step_description"} %>
      <span style="width:20px"></span>
      <%= f.text_area :expected, 
          {:value => @step.expected, 
           :class => "step_expected"} %>
      <br/>
      <span class="step-number"></span>
      <%= submit_tag 'Save step', :class => "button" %> or
      <%= link_to_remote('Cancel',
            :url => step_path(@step),
            :method => :get) %>
<% end %>
<script type="text/javascript">
  new ResizingStep($('step_<%=@step.id%>').down('.step_description'),
                   $('step_<%=@step.id%>').down('.step_expected'));
</script>
