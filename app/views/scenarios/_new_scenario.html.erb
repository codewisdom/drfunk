<% remote_form_for([@plan, Scenario.new]) do |f| %>
    <%= f.hidden_field :feature_id, {:value => @feature.id} %>
    <%= f.text_field :name, :style => "margin-left:4px;width:300px;"%>
    <br/>
    <%= submit_tag 'Add Scenario', :class => "button", :style => "margin-left:4px;" %>
    or <%= link_to_function('Cancel', 
             "$('new_scenario_feature_#{@feature.id}').hide();$('add_scenario_feature_#{@feature.id}').show();", :style => "font-size:85%; margin:4px;") %>
<% end %>
