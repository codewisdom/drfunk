<% if @plan.features.size == 0 %>
  <div class="feature_box medium-text" style="padding-top:10px;text-align:center;">
   This is where you organize the structure of the Test Plan.<br/><br/> 
     <span style="color:#99f">Features</span> are lightweight categories.<br/>
     <span style="color:#99f">Scenarios</span> are test cases.
  </div>
<% end %>
<% for @feature in @plan.features.name_sorted %>
<div id="feature_box_<%=@feature.id%>" class="feature_box">
  <div id="scenario_set_<%=@feature.id%>">
    <%= render :partial => 'scenarios/scenario_set'-%>
  </div>
  <div id="add_scenario_feature_<%= @feature.id %>" style="margin:4px;">
    <%= render :partial => 'scenarios/add_scenario'-%>
  </div>
  <div id="new_scenario_feature_<%= @feature.id %>" style="margin:4px;display:none;">
    <%= render :partial => 'scenarios/new_scenario'-%>
  </div>
</div>
<div id="feature_spacer_<%=@feature.id%>">&nbsp;</div>
<% end %>
